{
  "compilerOptions": {
    "skipLibCheck": true,
    "alwaysStrict": true,
    "target": "es2022",
    "lib": ["es2022"],

    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,

    //"allowJs": true,
    //"resolveJsonModule": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": false,

    "outDir": "build",
    "rootDir": "src",
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}